<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hackathon.teachtube">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Utils.Binder"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Activities.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OtherActivities.Study.MainStudyActivity"
            android:exported="false" />
        <activity
            android:name=".OtherActivities.Study.LiveClassActivity"
            android:exported="false" />
        <activity
            android:name=".Activities.InfoActivity"
            android:exported="false" />
        <activity
            android:name=".OtherActivities.Study.SelectSubjectActivity"
            android:exported="false" />
        <activity
            android:name=".OtherActivities.Study.YoutubeVideoActivity"
            android:exported="false" />
        <activity
            android:name=".Security.LoginActivity"
            android:exported="true"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>
        <activity
            android:name=".Security.RegisterActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".Activities.MainActivity"
            android:screenOrientation="unspecified"
            android:windowSoftInputMode="stateAlwaysHidden"></activity>
    </application>

</manifest>